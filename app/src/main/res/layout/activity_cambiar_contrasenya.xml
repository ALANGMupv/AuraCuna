<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Introduce tu contraseña actual:"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_contrasenya_vieja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:hint="Contraseña actual"
                android:inputType="textPassword"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Introduce la nueva contraseña:"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_contrasenya_nueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:hint="Nueva contraseña"
                android:inputType="textPassword"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/et_contrasenya_nueva_rep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:hint="Repite la contraseña"
                android:inputType="textPassword"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/confirmar_cambio_contrasenya"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2F3C62"
                android:text="Confirmar"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancelar_cambio_contrasenya"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#2F3C62"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
