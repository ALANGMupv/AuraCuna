<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/confirmar_cambio_contrasenya"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2F3C62"
        android:text="Confirmar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_contrasenya_vieja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_contrasenya_vieja"
        app:layout_constraintTop_toTopOf="@+id/et_contrasenya_vieja" />

    <Button
        android:id="@+id/cancelar_cambio_contrasenya"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:backgroundTint="#2F3C62"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_contrasenya_nueva_rep"
        app:layout_constraintEnd_toEndOf="@+id/confirmar_cambio_contrasenya"
        app:layout_constraintStart_toStartOf="@+id/confirmar_cambio_contrasenya"
        app:layout_constraintTop_toTopOf="@+id/et_contrasenya_nueva_rep" />

    <EditText
        android:id="@+id/et_contrasenya_vieja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:fontFamily="@font/quicksand_bold"
        android:hint="Contraseña actual"
        android:inputType="text|textPassword"
        app:layout_constraintEnd_toStartOf="@+id/confirmar_cambio_contrasenya"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="Introduce tu contraseña actual:"
        app:layout_constraintBottom_toTopOf="@+id/et_contrasenya_vieja"
        app:layout_constraintStart_toStartOf="@+id/et_contrasenya_vieja" />

    <EditText
        android:id="@+id/et_contrasenya_nueva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/quicksand_bold"
        android:hint="Nueva contraseña"
        android:inputType="text|textPassword"
        app:layout_constraintEnd_toStartOf="@+id/et_contrasenya_nueva_rep"
        app:layout_constraintStart_toStartOf="@+id/et_contrasenya_vieja"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Introdce la nueva contraseña:"
        app:layout_constraintStart_toStartOf="@+id/et_contrasenya_nueva"
        app:layout_constraintTop_toBottomOf="@+id/et_contrasenya_vieja" />

    <EditText
        android:id="@+id/et_contrasenya_nueva_rep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:fontFamily="@font/quicksand_bold"
        android:hint="Repite la contraseña"
        android:inputType="text|textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_contrasenya_vieja"
        app:layout_constraintStart_toEndOf="@+id/et_contrasenya_nueva"
        app:layout_constraintTop_toTopOf="@+id/et_contrasenya_nueva" />
</androidx.constraintlayout.widget.ConstraintLayout>