<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Personaliza tu tema aquí -->
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
    </style>

    <!-- Define the global text appearance -->
    <style name="CustomTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_variable_font_wght</item>
        <!-- Puedes definir más atributos de texto global aquí -->
    </style>

    <!-- Botón personalizado -->
    <style name="MyButtonStyle3" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- CardView Style -->
    <style name="CardViewStyle_RL">
        <item name="cardBackgroundColor">@color/blanco_raro</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <!-- TextView Style, tenía el color y la fuente, mirar en master -->
    <style name="TextViewStyle_RL">
        <item name="android:textSize">25dp</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle_RL">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <!-- Register TextView Style - Le falta la fuente, la tenía definida -->
    <style name="RegisterTextViewStyle_RL">
        <item name="android:textColor">@color/amarillo</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <!-- Register Button Style -->
    <style name="ButtonStyle_RL">
        <item name="android:backgroundTint">@color/amarillo</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">20dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <!-- Estilo para los botones redondeados -->
    <style name="RoundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="backgroundTint">@color/blanco_raro</item>
    </style>

    <!-- Estilo para los TextView principales -->
    <style name="MainTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para los TextView secundarios -->
    <style name="SecondaryTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>